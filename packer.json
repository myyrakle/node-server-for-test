{
    "variables": {
        "aws_region": "{{env `AWS_REGION`}}",
        "aws_ami_name": "server", 
	"version": "{{env `CODEBUILD_BUILD_NUMBER`}}"
    },
    "builders": [{
	"source_ami": "ami-0a88194cb94adbe45", 
        "type": "amazon-ebs",
        "region": "{{user `aws_region`}}",
